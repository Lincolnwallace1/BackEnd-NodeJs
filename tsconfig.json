{
  "compilerOptions": {
    "target": "es2016",                                 
    "module": "commonjs",                    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true,
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@docs/*": [
        "./src/docs/*",    
      ],
      "@routes/*": [],
      "@entities/*": []
    }
  },                               
}
