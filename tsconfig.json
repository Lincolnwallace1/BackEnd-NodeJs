{
  "compilerOptions": {
    "experimentalDecorators": true,
    "target": "es2018",                                 
    "module": "commonjs",                    
    "esModuleInterop": true,                             
    "forceConsistentCasingInFileNames": true,          
    "strict": true,                                    
    "skipLibCheck": true,
    "paths": {
      "@common/*": [
        "./src/common/*"
      ],
      "@modules/*": [
        "./src/modules/*"
      ],
      "@config/*": [
        "./src/config/*"
      ],
      "@docs/*": [
        "./src/docs/*", 
        "./src/modules/user/infra/http/docs/*",   
      ],
      "@routes/*": [
        "./src/modules/auth/infra/http/routes/*"
      ],
      "@entities/*": [
        "./src/modules/user/infra/typeorm/entities/*"
      ]
    }
  },                               
}
